@model NMCNPM.Models.Customer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký tài khoản</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f0f2f5;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .register-container {
            width: 400px;
            padding: 30px;
            background-color: white;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }
        .register-container h2 {
            text-align: center;
            margin-bottom: 20px;
            font-weight: bold;
        }
        .form-control:focus {
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
            border-color: rgba(0, 123, 255, 0.8);
        }
        .btn-primary {
            width: 100%;
            padding: 10px;
            margin-top: 15px;
        }
    </style>
</head>
<body>

    <div class="register-container">
        <h2>Đăng ký tài khoản</h2>
        <form asp-action="Register" method="post">
            <div class="mb-3">
                <label for="HoTenKH" class="form-label">Họ tên</label>
                <input asp-for="HoTenKH" class="form-control" placeholder="Nhập họ tên của bạn" />
                <span asp-validation-for="HoTenKH" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="SDTKH" class="form-label">Số điện thoại</label>
                <input asp-for="SDTKH" class="form-control" placeholder="Nhập số điện thoại của bạn" />
                <span asp-validation-for="SDTKH" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Password" class="form-label">Mật khẩu</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Đăng ký</button>
        </form>

        <div class="mt-3 text-center">
            <p>Đã có tài khoản? <a asp-action="Login" asp-controller="Login">Đăng nhập</a></p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>