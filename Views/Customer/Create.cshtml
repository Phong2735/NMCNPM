@model NMCNPM.Models.Customer

@{
    ViewData["Title"] = "Create Customer";
}

<h2>Thêm khách hàng mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="HoTenKH" class="control-label">Họ tên</label>
        <input asp-for="HoTenKH" class="form-control" />
        <span asp-validation-for="HoTenKH" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SDTKH" class="control-label">Số điện thoại</label>
        <input asp-for="SDTKH" class="form-control" />
        <span asp-validation-for="SDTKH" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmailKH" class="control-label">Email</label>
        <input asp-for="EmailKH" class="form-control" />
        <span asp-validation-for="EmailKH" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiaChiKH" class="control-label">Địa chỉ</label>
        <input asp-for="DiaChiKH" class="form-control" />
        <span asp-validation-for="DiaChiKH" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Password</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Thêm khách hàng</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách khách hàng</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}