@model NMCNPM.Models.Customer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cập Nhật Thông Tin Khách Hàng</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* CSS tùy chỉnh */
        body {
            background-color: #f8f9fa;
            font-family: 'Arial', sans-serif;
        }

        h2 {
            margin-top: 20px;
            color: #0d6efd;
            font-weight: bold;
        }

        .form-container {
            margin-top: 50px;
            background-color: white;
            border-radius: 10px;
            padding: 30px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
            font-size: 18px;
        }

        span.text-danger {
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="text-center">Cập Nhật Thông Tin Khách Hàng</h2>

        <div class="form-container mx-auto col-md-8 col-lg-6">
            <form asp-action="UpdateInf" method="post" class="row g-3">
                <input type="hidden" name="id" value="@Model.CustomerID"></input>
                <div class="col-md-6">
                    <label asp-for="HoTenKH" class="form-label">Họ tên:</label>
                    <input asp-for="HoTenKH" class="form-control" />
                    <span asp-validation-for="HoTenKH" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SDTKH" class="form-label">Số điện thoại:</label>
                    <input asp-for="SDTKH" class="form-control" />
                    <span asp-validation-for="SDTKH" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="EmailKH" class="form-label">Email:</label>
                    <input asp-for="EmailKH" class="form-control" />
                    <span asp-validation-for="EmailKH" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="DiaChiKH" class="form-label">Địa chỉ:</label>
                    <input asp-for="DiaChiKH" class="form-control" />
                    <span asp-validation-for="DiaChiKH" class="text-danger"></span>
                </div>

                <div class="col-12 mt-4">
                    <button type="submit" class="btn btn-primary">Lưu Thay Đổi</button>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
</html>